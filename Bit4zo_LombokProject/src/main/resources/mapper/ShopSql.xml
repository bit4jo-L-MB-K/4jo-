<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ShopMapper">
   
    <insert id="insertShop" parameterType="pdto">
        insert into product (pro_id,pro_name,price,stock,pro_sub,pro_photo,pro_content,ipgoday) values (#{pro_id},#{pro_name},#{price},#{stock},#{pro_sub},#{pro_photo},#{pro_content},now())
    </insert>
    
    <insert id="insertShopOp" parameterType="podto">
        insert into pro_option (pro_id,color,s,m,l) values (#{pro_id},#{color},#{s},#{m},#{l})
    </insert>
    
    <select id="getTotalCount" resultType="int">
		select count(*) from product
 	</select>
 	
 	<select id="getAllLists" parameterType="HashMap" resultType="pdto">
 		select * from product order by num desc limit #{start},#{perpage}
 	</select>
 	
 	<!--  <select id="getAllLists2" parameterType="String" resultType="podto">
 		select * from pro_option where pro_id=#{pro_id} order by num desc
 	</select>-->
 		
 	<select id="getData" parameterType="String" resultType="pdto">
 		select * from product where num=#{num}
 	</select>
 	
 	
 	<select id="getData2" parameterType="podto" resultType="podto">
 		select product.pro_name,product.price,product.stock,product.pro_sub,pro_option.color,pro_option.s,pro_option.m,pro_option.l
 		from product join pro_option on product.pro_id=pro_option.pro_id where product.pro_id=#{pro_id}
 	</select>
 	
 	<resultMap type="pdto" id="pdto">
  	 <result column="pro_name" property="pro_name"/>
  	 <result column="price" property="price"/>
  	 <result column="stock" property="stock"/>
  	 <result column="pro_sub" property="pro_sub"/>
	</resultMap>

	<resultMap type="podto" id="podto">
  	 <result column="pro_id" property="pro_id"/>
  	 <result column="color" property="color"/>
  	 <result column="s" property="s"/>
   	<result column="m" property="m"/>
   	<result column="l" property="l"/>
<collection property="joindto" resultMap="pdto"/>
</resultMap>
 	
 	<select id="getData3" parameterType="String" resultType="podto">
 		select * from pro_option where pro_id=#{pro_id}
 	</select>
 	
 	<update id="updateReadCount" parameterType="String">
      	update product set readcount=readcount+1 where num=#{num}
    </update>
 	
</mapper>