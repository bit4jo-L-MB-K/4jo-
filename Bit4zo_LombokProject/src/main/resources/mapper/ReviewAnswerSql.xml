<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ReviewAnswerMapper">
	<select id="getTotalCount" resultType="int">
   		select count(*) from reviewanswer
   </select>
	<insert id="insertAnswer" parameterType="redto">
		insert into reviewanswer (num,name,myid,content,writeday) values (
		#{num},#{name},#{myid},#{content},now())
	</insert>
	<select id="getAllAnswer" resultType="redto">
		select * from reviewanswer order by idx desc
	</select>
	<select id="getAnswer" parameterType="String" resultType="redto">
		select * from reviewanswer where idx=#{idx}
	</select>
	<update id="updateAnswer" parameterType="redto">
		update reviewanswer set content=#{content} where idx=#{idx}
	</update>
	<delete id="deleteAnswer" parameterType="String">
		delete from reviewanswer where idx=#{idx}
	</delete>
</mapper>











